<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.wizardfight"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application android:allowBackup="true"
        	     android:icon="@drawable/ic_launcher"
        		 android:label="@string/app_name" >
        <activity android:name=".MainMenu"
                  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WizardFight"
            	  android:screenOrientation="portrait"
                  android:label="@string/app_name"
                  android:launchMode="singleTop"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".ClientWaitingActivity"
            	  android:label="@string/client_waiting"
            	  android:theme="@style/ClientWaitingDialog"
             	  android:screenOrientation="portrait"
             	  android:noHistory="true"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".Countdown"
             	  android:screenOrientation="portrait"
            	  android:label=""
                  android:theme="@style/CountdownDialog"/>
        <activity android:name=".DeviceListActivity"
                  android:screenOrientation="portrait"
                  android:label="@string/select_device"
                  android:noHistory="true"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".Tutorial"
            	  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden" />
        <activity android:name=".Spellbook"
            	  android:screenOrientation="portrait"
                  android:configChanges="orientation|keyboardHidden" />
    </application>
</manifest>
